<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size:'100x67' %>
          <% end %>
        </td>
        <td><%= link_to book.title,book %></td>
        <td><%= book.body %></td>
        <td>
          <% book.tags.each do |tag| %>
            <li style="list-style: none;">
              <%= link_to tag.name, search_path(content: tag.name, model:"tag", method: "perfect") %>
            </li>
          <% end %>
        </td>
        <td class="favorite-btn_<%= book.id %>"><%= render "favorites/favorite-btn", book: book %> </td>
        <td>
          コメント数：<%= book.book_comments.count %>
        </td>
        <td id="star-rate<%= book.id%>">
          <script>
            $('#star-rate<%= book.id%>').raty({
              size      : 36,
              starOff   : '<%= asset_path('star-off.png') %>',
              starOn    : '<%= asset_path('star-on.png') %>',
              half      : false,
              readOnly: true,
              score: <%= book.star %>,
            });
          </script>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
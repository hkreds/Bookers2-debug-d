<table class="table table-hover table-inverse">
  <% if @range == "User" %>
    <h2><span>Users </span>search for <span>"<%= params[:word] %>"</span></h2>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, size: '100x67' %></td>
          <td><%= user.name %></td>
          <td><%= link_to 'Show', user %></td>
        </tr>
      <% end %>
    </tbody>
  <% elsif @range == "Book" %>
    <h2><span>Books </span>search for <span>"<%= params[:word] %>"</span></h2>
    <%= render "books/index", books: @books %>
  <% end %>
</table>